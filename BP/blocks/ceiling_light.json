{
	"format_version": "1.21.0",
	"minecraft:block": {
		"description": {
			"identifier": "fr:ceiling_light",
			"menu_category": {
				"category": "construction"
			},
			"states": {
				"fr:lit": [false, true],
				"fr:cardinal": [0, 1]
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": ["minecraft:cardinal_direction"]
				}
			}
		},
		"components": {
			"minecraft:collision_box": {
				"origin": [-8, 0, -4],
				"size": [16, 3, 8]
			},
			"minecraft:selection_box": {
				"origin": [-8, 0, -4],
				"size": [16, 3, 8]
			},
			"minecraft:geometry": {
				"identifier": "geometry.fr_ceiling_light"
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "fr_long_ceilinglight_off",
					"render_method": "alpha_test"
				}
			}
		},
		"permutations": [
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'north' || q.block_state('minecraft:cardinal_direction') == 'south'",
				"components": {
					"minecraft:transformation": { "rotation": [0, 0, 0], "scale": [2, 2, 2], "translation": [ 0, 0.5, 0] },
					"minecraft:collision_box": {
						"origin": [-8, 0, -2.5],
						"size": [16, 8, 5]
					},
					"minecraft:selection_box": {
						"origin": [-8, 0, -2.5],
						"size": [16, 8, 5]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'east' || q.block_state('minecraft:cardinal_direction') == 'west'",
				"components": {
					"minecraft:transformation": { "rotation": [0, 90, 0], "scale": [2, 2, 2], "translation": [ 0, 0.5, 0] },
					"minecraft:collision_box": {
						"origin": [-8, 0, -2.5],
						"size": [16, 8, 5]
					},
					"minecraft:selection_box": {
						"origin": [-8, 0, -2.5],
						"size": [16, 8, 5]
					}
				}
			},
			{
				"condition": "q.block_state('fr:lit') == false",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "fr_long_ceilinglight_off",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "q.block_state('fr:lit') == true",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "fr_long_ceilinglight_on",
							"render_method": "alpha_test",
							"ambient_occlusion": false,
							"emissive": true,
							"face_dimming": false
						}
					},
					"minecraft:light_emission": 14
				}
			}
		]
	}
}
