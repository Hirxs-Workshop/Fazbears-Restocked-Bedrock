{
	"format_version": "1.21.30",
	"minecraft:block": {
		"description": {
			"identifier": "fr:breaker",
			"menu_category": {
				"category": "construction"
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": ["minecraft:cardinal_direction"]
				}
			},
			"states": {
				"fr:variants": [
					0, 
					1, 
					2
				],
				"fr:switch_type": [
					false,
					true
				]
			}
		},
		"components": {
			"minecraft:geometry":  {
				"identifier": "geometry.breaker",
				"bone_visibility": {
					"breaker": true,
					"switch_off": "q.block_state('fr:switch_type') == false",
					"switch_on": "q.block_state('fr:switch_type') == true"
				}
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "breaker_black",
					"render_method": "alpha_test"
				}
			},
			"minecraft:collision_box": {
				"origin": [-7, 1, 5],
				"size": [13, 15, 3]
			},
			"minecraft:selection_box": {
				"origin": [-7, 1, 5],
				"size": [13, 15, 3]
			},
			"fr:switch": {}
		},
		"permutations": [
			{
				"condition": "q.block_state('fr:variants') == 0",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "breaker_black",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "q.block_state('fr:variants') == 1",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "breaker_white",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "q.block_state('fr:variants') == 2",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "breaker_gray",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'north'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							180,
							0
						]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'west'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							-90,
							0
						]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'south'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							0,
							0
						]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'east'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							90,
							0
						]
					}
				}
			}
		]
	}
}