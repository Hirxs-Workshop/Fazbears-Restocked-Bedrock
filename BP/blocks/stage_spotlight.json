{
	"format_version": "1.21.40",
	"minecraft:block": {
		"description": {
			"identifier": "fr:stage_spotlight",
			"menu_category": {
				"category": "construction"
			},
			"states": {
				"fr:lit": [
					false,
					true
				],
				"fr:rotation": {
					"values": {
						"min": 0,
						"max": 15
					}
				}
			},
			"traits": {
				"minecraft:placement_position": {
					"enabled_states": [
						"minecraft:block_face"
					]
				}
			}
		},
		"components": {
			"minecraft:collision_box": {
				"origin": [-4.5, 2, -4.5],
				"size": [9, 14, 9]
			},
			"minecraft:selection_box": {
				"origin": [-4.5, 2, -4.5],
				"size": [9, 14, 9]
			},
			"minecraft:geometry": {
				"identifier": "geometry.stage_spotlight",
				"bone_visibility": {
					"up_0": "q.block_state('minecraft:block_face') == 'down' && !math.mod(q.block_state('fr:rotation'), 4)",
					"up_22_5": "q.block_state('minecraft:block_face') == 'down' && !math.mod(q.block_state('fr:rotation') - 1, 4)",
					"up_45": "q.block_state('minecraft:block_face') == 'down' && !math.mod(q.block_state('fr:rotation') - 2, 4)",
					"up_67_5": "q.block_state('minecraft:block_face') == 'down' && !math.mod(q.block_state('fr:rotation') - 3, 4)",
					"side": "q.block_state('minecraft:block_face') != 'down'"
				}
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "spotlight",
					"render_method": "alpha_test"
				}
			},
			"fr:single_interactive": {},
			"fr:down_precise_rotation": {}
		},
		"permutations": [
			{
				"condition": "!q.block_state('fr:lit')",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "spotlight",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "q.block_state('fr:lit')",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "spotlight",
							"render_method": "alpha_test",
							"ambient_occlusion": false,
							"emissive": true,
							"face_dimming": false
						}
					},
					"minecraft:light_emission": 13
				}
			},
			{
				"condition": "q.block_state('fr:rotation') >= 4 || q.block_state('minecraft:block_face') == 'east'",
				"components": {
					"minecraft:transformation": {
						"rotation": [0, -90, 0]
					}
				}
			},
			{
				"condition": "q.block_state('fr:rotation') >= 8 || q.block_state('minecraft:block_face') == 'south'",
				"components": {
					"minecraft:transformation": {
						"rotation": [0, 180, 0]
					}
				}
			},
			{
				"condition": "q.block_state('fr:rotation') >= 12 || q.block_state('minecraft:block_face') == 'west'",
				"components": {
					"minecraft:transformation": {
						"rotation": [0, 90, 0]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:block_face') != 'down'",
				"components": {
					"minecraft:collision_box": {
						"origin": [-4.5, 2, -4.5],
						"size": [9, 14, 9]
					},
					"minecraft:selection_box": {
						"origin": [-4.5, 2, -4.5],
						"size": [9, 14, 9]
					}
				}
			}
		]
	}
}