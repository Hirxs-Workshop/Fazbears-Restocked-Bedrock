{
  "namespace": "fr_editor_screen",

  "editor_ui": {
    "type": "panel",
    "size": [260, 220],
    "max_size": ["35%", "60%"],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [20, 60],
    "controls": [
      { "bg": { "type": "image", "size": ["100%", "100%"], "texture": "textures/fr_ui/old_pc_single_modal", "layer": 1 } },
      { "list_cover": { "type": "image", "size": ["100% - 12px", "100% - 70px"], "anchor_from": "center", "anchor_to": "center", "offset": [0, 14], "texture": "textures/fr_ui/internal_modal_gray_hover", "alpha": 1.0, "layer": 900 } },
      { "title": { "type": "label", "text": "Editor", "anchor_from": "top_middle", "anchor_to": "top_middle", "offset": [0, 8], "font_scale_factor": 0.9, "layer": 905 } },
      { "lbl_rot": { "type": "label", "text": "Rotation", "anchor_from": "top_middle", "anchor_to": "top_middle", "offset": [0, 32], "font_scale_factor": 0.75, "layer": 905 } },
      { "lbl_anim": { "type": "label", "text": "Animation", "anchor_from": "top_middle", "anchor_to": "top_middle", "offset": [0, 85], "font_scale_factor": 0.75, "layer": 905 } },
      { "lbl_misc": { "type": "label", "text": "Misc", "anchor_from": "top_middle", "anchor_to": "top_middle", "offset": [0, 138], "font_scale_factor": 0.75, "layer": 905 } },
      { "buttons@server_form.editor_buttons_content": {
          "size": ["100% - 24px", "100% - 60px"],
          "anchor_from": "center",
          "anchor_to": "center",
          "offset": [0, 15],
          "grid_dimensions": [3, 3]
        } }
    ],
    "bindings": [
      { "binding_type": "global", "binding_condition": "none", "binding_name": "#title_text", "binding_name_override": "#title_text" },
      { "binding_name": "#null", "source_property_name": "(not ((#title_text - $flag_editor) = #title_text))", "binding_type": "view", "target_property_name": "#visible" },
      { "binding_name": "#null", "source_property_name": "(not ((#title_text - $flag_editor) = #title_text))", "binding_type": "view", "target_property_name": "#enabled" }
    ]
  }
}
