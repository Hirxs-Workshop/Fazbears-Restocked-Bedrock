  "employee_item_highlight": {
    "type": "panel",
    "controls": [
      {
        "repairman@employee_highlight_template": {
          "$codec": "$flag_employee_compatible"
        }
      },
      {
        "security@employee_highlight_template": {
          "$codec": "$flag_security"
        }
      },
      {
        "manager@employee_highlight_template": {
          "$codec": "$flag_manager"
        }
      },
      {
        "executive@employee_highlight_template": {
          "$codec": "$flag_executive"
        }
      },
      {
        "employee@employee_highlight_template": {
          "$codec": "$flag_employee"
        }
      },
      {
        "off@employee_highlight_template": {
          "$codec": "$flag_off"
        }
      }
    ]
  },
  "employee_highlight_template": {
    "type": "image",
    "texture": "textures/fr_ui/faz-diver_repairman_icon",
    "layer": 40,
    "bindings": [
      {
        "binding_name": "#hover_text",
        "binding_type": "collection",
        "binding_collection_name": "$item_collection_name"
      },
      {
        "binding_type": "view",
        "source_property_name": "(not((#hover_text-$codec)=#hover_text))",
        "target_property_name": "#visible"
      }
    ],
    "$h_size|default": [
      "100% - 2px",
      "100% - 2px"
    ],
    "size": "$h_size"
  },
